{
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": true,
    "printWidth": 120,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "overrides": [
        {
            "files": ["*.html"],
            "options": {
                "tabWidth": 4,
                "printWidth": 120,
                "singleQuote": false,
                "parser": "html"
            }
        },
        {
            "files": ["*.md"],
            "options": {
                "tabWidth": 4,
                "printWidth": 120,
                "singleQuote": true,
                "parser": "markdown"
            }
        }
    ]
}
